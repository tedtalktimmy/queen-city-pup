<div class="card">
  <div class="card-header col-md-10">
    <h2>
      Playdate Pups
    </h2>
    </div>
    
 
 
  {{#each dogs as |dog|}}
    <div class="dish col-md-5">
      
      <p>
        <a href="/furr-baby/{{dog.id}}">
        {{dog.dog_name}}
        </a>
      </p>
    </div>
    <div class="col-md-7">
      {{#if dog.image}}
      <img src="{{dog.image}}" alt="{{dog.dog_name}}">
      {{else}}
      <img src="https://via.placeholder.com/225" alt="placeholder">
      {{/if}}
      <p>
        {{dog.about}}
      </p>
      <p>
        {{dog.owner_id}}
      </p>
    </div>
  {{/each}}
</div>

